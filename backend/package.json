{
  "name": "pos-backend-api",
  "version": "1.0.0",
  "description": "Express.js backend API for POS application with Supabase integration",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "npx tsc",
    "postbuild": "node -e \"console.log('âœ… Build successful: dist/app.js exists:', require('fs').existsSync('./dist/app.js'))\"",
    "start": "node dist/app.js",
    "start:dev": "ts-node src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "validate:env": "node scripts/validate-production.js",
    "deploy:check": "npm run type-check && npm run lint && npm run validate:env"
  },
  "keywords": [
    "pos",
    "express",
    "supabase",
    "typescript",
    "api"
  ],
  "author": "POS Application Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@types/node": "^20.10.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "morgan": "^1.10.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  }
}
